big-container{
  background-color: 	#DCDCDC;
  height: 100%;
}
/* 轮播图 */
.lunbo{
  /* margin:10rpx; */
  width: 100%;
}
.lunbo image{
  /* padding:10rpx; */
  width: 100%;
  max-height :100%;
  border-radius: 20rpx;
}

.farmer-buttons-container{
  display: flex;
  padding: 30rpx 18rpx 20rpx 18rpx;
}
.button-image{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
}
.farmer-my-button{
  font-size: 30rpx;
text-align: center;
  border-radius: 20rpx;
  background-color:white;
  color: #1296db;
  box-shadow:1px 1px 1px 1px #D3D3D3;
  width:200rpx ;
  margin: 0rpx 10rpx;
   /* width:170rpx ;
  margin: 0rpx 8rpx; */
  padding: 10rpx;
}
/**欢迎标题**/
.note{
  padding: 25rpx 40rpx 0rpx 40rpx;
  color:rgb(18, 150,219);
}
/**积分栏**/
.show-container{
  display: flex;
  padding: 20rpx;
  margin: 25rpx;
  background-color: white;
  border-radius: 20rpx;
  box-shadow:1px 1px 1px 1px #D3D3D3;
}
.logo{
  width: 120rpx;
  height: 120rpx;
}
.login{
  background-image: linear-gradient(to right, #C1E3FF,#ABC7FF);
  border-radius: 60rpx;
  height: 110rpx;
  box-shadow:1px 1px 1px 1px #D3D3D3;
  color: white;
  position: relative;
  top: 15%;
  right: 5%;
}
.login-text{
  position: relative;
  top: 8%;
}
.show-container-item{
 width: 50%;
 text-align: center;
 border-color:2rpx solid rgb(18, 150,219);
}
.show-score{
  text-align: center;
  font-size: 50rpx;
  padding-top: 10rpx;
}
.show-text{
  color:rgb(18, 150,219);
  font-size: smaller;
}
/* 小贴士 */
.new-container{
  margin: 20rpx;
  padding:10rpx;
}
.title{
  font-weight: bold;
  color:rgb(18, 150,219);
}
.new-item{
  box-shadow:1px 1px 1px 1px #D3D3D3;
  margin-bottom: 10rpx;
  border-radius: 20rpx;
}
.new-image{
  text-align: center;
  padding-top: 20rpx;
  border-radius: 20rpx;
}
.new-image image{
  width: 650rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.new-title{
  padding-bottom: 13rpx;
  text-align: center;
  font-size: smaller;
  color:rgb(18, 150,219);
}